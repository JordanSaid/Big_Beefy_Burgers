<h1>Deals</h1>

<p>
  <a href="/deals/new">Add a deal</a>
</p>

<ul>
  <% for deal in @deals %>
  <li>
  <p><%= deal.name %> </p>
  <p><%= deal.description %></p>
  <p><a href="/days/<%= deal.day_id %>"><%= deal.day.name %></a></p>
  <p><a href="/restaurants/<%= deal.restaurant_id%>"><%= deal.restaurant.name %></a></p>
  
    <p>
      <form action="/deals/<%= deal.id %>/delete" method="POST">
        <input type="submit" value="delete" />
      </form>
    </p>
  </li>
  <% end %>
</ul>