<h1><%= @restaurant.name%></h1>
<a href="/restaurants/<%= @restaurant.id %>/edit">Edit Restaurant</a>
<form action="/restaurants/<%= @restaurant.id %>/delete" method="post">
  <input type="submit" value="Delete Restaurant" />
</form>
<a href="<%= @restaurant.website %>">Website</a>
<a href="<%= @restaurant.menu %>">Menu</a>
  <div>
  <h3>Deals</h3>
  <% for deal in @deals %>
  <% if (deal.restaurant_id == @restaurant.id) %>
  <p> Deal: <%= deal.name()%>
  </p>
  <p> Description: <%= deal.description()%>
  <p> Day: <%= deal.day.name()%></p>
  <hr>
  <%end%>
  <%end%>
  </div>
  

  


