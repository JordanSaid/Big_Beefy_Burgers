<h1><%= @restaurant.name%></h1>
<p align ="center"><a href="<%= @restaurant.website %>">Website</a></p>
<p align ="center"><a href="<%= @restaurant.menu %>">Menu</a></p>
<p align="center"><a href="/restaurants/<%= @restaurant.id %>/edit">Edit Restaurant</a></p>
<form align="center" action="/restaurants/<%= @restaurant.id %>/delete" method="post"><input type="submit" value="Delete Restaurant" />
</form>
  <div>
  <h3>Deals</h3>
  <% for deal in @deals %>
  <% if (deal.restaurant_id == @restaurant.id) %>
  <p> Deal: <%= deal.name()%>
  </p>
  <p> Description: <%= deal.description()%>
  <p> Day: <%= deal.day.name()%></p>
  <hr>
  <%end%>
  <%end%>
  </div>
  

  


